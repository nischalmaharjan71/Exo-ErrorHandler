@model  MODEL.Module

@{
    ViewBag.Title = "Index";
}

<h2>Module</h2>

<p>
    @Html.ActionLink("Create New", "AddEdit", new { id = 0 }, new { @class = "btn btn-primary" })
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ModuleName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModuleDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrganizationName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProjectName)
        </th>


        <th></th>
    </tr>

    @foreach (var item in Model.ModuleList)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ModuleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModuleDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrganizationName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectName)
            </td>


            <td>
                @Html.ActionLink("Edit", "AddEdit", new { id = item.ModuleId }, new { @class = "btn btn-success" }) |
                @Html.ActionLink("Details", "Details", new { id = item.ModuleId }, new { @class = "btn btn-secondary" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ModuleId }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>

